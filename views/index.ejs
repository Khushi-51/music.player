<div class="container-fluid py-5" style="background: #e6ecef; min-height: 100vh; font-family: 'Courier New', monospace;">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto text-center">
      <div class="py-4">
        <h1 class="display-4 fw-bold text-dark mb-4" style="letter-spacing: 2px;">
          <i class="fas fa-music me-2"></i>Music Player
        </h1>
        <p class="lead text-secondary mb-5 mx-auto" style="max-width: 500px;">Stream tunes, build playlists, and find new artists.</p>
        
        <% if (!locals.user) { %>
          <div class="d-flex justify-content-center gap-3">
            <a href="/auth/login" class="btn btn-dark btn-lg px-4 py-2" style="border-radius: 5px; transition: background 0.3s ease;">Login</a>
            <a href="/auth/register" class="btn btn-outline-dark btn-lg px-4 py-2" style="border-radius: 5px; transition: background 0.3s ease;">Register</a>
          </div>
        <% } else { %>
          <div class="d-flex justify-content-center gap-3">
            <a href="/songs" class="btn btn-dark btn-lg px-4 py-2" style="border-radius: 5px; transition: background 0.3s ease;">Browse Songs</a>
            <a href="/songs/upload/new" class="btn btn-outline-dark btn-lg px-4 py-2" style="border-radius: 5px; transition: background 0.3s ease;">Upload Music</a>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-12">
      <h2 class="text-center text-dark fw-bold mb-4">Features</h2>
      <div class="row justify-content-center">
        <div class="col-md-4 col-sm-6 mb-4">
          <div class="card h-100 border-0" style="background: #f8f9fa; transition: transform 0.3s ease;" onmouseover="this.style.transform='scale(1.02)'" onmouseout="this.style.transform='scale(1)'">
            <div class="card-body text-center p-4">
              <i class="fas fa-headphones-alt text-dark fa-3x mb-3"></i>
              <h5 class="card-title fw-bold">Stream Music</h5>
              <p class="card-text text-secondary">Play your favorite tracks anytime, anywhere.</p>
            </div>
          </div>
        </div>
        <div class="col-md-4 col-sm-6 mb-4">
          <div class="card h-100 border-0" style="background: #f8f9fa; transition: transform 0.3s ease;" onmouseover="this.style.transform='scale(1.02)'" onmouseout="this.style.transform='scale(1)'">
            <div class="card-body text-center p-4">
              <i class="fas fa-list text-dark fa-3x mb-3"></i>
              <h5 class="card-title fw-bold">Create Playlists</h5>
              <p class="card-text text-secondary">Organize and share your music collections.</p>
            </div>
          </div>
        </div>
        <div class="col-md-4 col-sm-6 mb-4">
          <div class="card h-100 border-0" style="background: #f8f9fa; transition: transform 0.3s ease;" onmouseover="this.style.transform='scale(1.02)'" onmouseout="this.style.transform='scale(1)'">
            <div class="card-body text-center p-4">
              <i class="fas fa-upload text-dark fa-3x mb-3"></i>
              <h5 class="card-title fw-bold">Upload Songs</h5>
              <p class="card-text text-secondary">Add your tracks and access them anywhere.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-12 text-center">
      <h2 class="text-dark fw-bold mb-4">Start Now</h2>
      <p class="lead text-secondary mx-auto" style="max-width: 500px;">Join music fans enjoying our platform.</p>
      <% if (!locals.user) { %>
        <a href="/auth/register" class="btn btn-dark btn-lg mt-3 px-4 py-2" style="border-radius: 5px; transition: background 0.3s ease;">Sign Up</a>
      <% } else { %>
        <a href="/songs" class="btn btn-dark btn-lg mt-3 px-4 py-2" style="border-radius: 5px; transition: background 0.3s ease;">Listen Now</a>
      <% } %>
    </div>
  </div>
</div>

<style>
  body {
    background: #e6ecef;
  }
  .btn-dark {
    background: #2c3e50;
    border: none;
  }
  .btn-dark:hover {
    background: #34495e;
  }
  .btn-outline-dark:hover {
    background: #ecf0f1;
    color: #2c3e50;
  }
  .card {
    border-radius: 10px;
  }
</style>